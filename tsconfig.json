{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2021" /* Set the JavaScript language version for emitted JavaScript */,
        "lib": ["es2021"] /* Specify library files to include in the compilation */,
        "module": "commonjs" /* Specify module code generation (Node.js default) */,
        "esModuleInterop": true /* Enables compatibility for default imports from CommonJS modules */,
        "allowJs": true /* Allow JavaScript files to be compiled alongside TypeScript */,
        "outDir": "./dist" /* Redirect output structure to the directory */,
        "rootDir": "./src" /* Specify the root directory of source files */,

        /* Type Checking */
        "strict": true /* Enable all strict type-checking options */,
        "noImplicitAny": true /* Raise error on expressions and declarations with an inferred 'any' type */,
        "strictNullChecks": true /* Enable strict null and undefined checks */,
        "strictFunctionTypes": true /* Enable strict checking of function types */,
        "strictPropertyInitialization": true /* Ensure class properties are assigned a value in the constructor */,
        "noImplicitThis": true /* Raise error on 'this' expressions with an inferred 'any' type */,
        "alwaysStrict": true /* Ensure files are parsed in ECMAScript strict mode */,
        "useUnknownInCatchVariables": true /* Use 'unknown' instead of 'any' for catch clause variables */,
        "exactOptionalPropertyTypes": true /* Treat optional properties more strictly */,

        /* Module Resolution */
        "moduleResolution": "node" /* Resolve modules using Node.js style */,
        "baseUrl": "./" /* Base directory to resolve non-absolute module names */,
        "resolveJsonModule": true /* Allow importing JSON files as modules */,
        "skipLibCheck": true /* Skip type checking of all declaration files */,

        /* Additional checks */
        "noUnusedLocals": true /* Report errors on unused locals */,
        "noUnusedParameters": true /* Report errors on unused parameters */,
        "noFallthroughCasesInSwitch": true /* Ensure switch statements have fallthrough cases handled */,
        "forceConsistentCasingInFileNames": true /* Ensure that casing is consistent throughout a file path */
    },
    "include": ["src/**/*"] /* Specify which files are included in the compilation */,
    "exclude": ["node_modules", "dist"] /* Exclude files from the compilation */
}
